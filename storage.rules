rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read files
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Allow teachers to upload files to their class folders
    match /assignments/{classId}/{teacherId}/{uploadTime}/{fileName} {
      allow write: if request.auth != null 
        && request.auth.uid == teacherId;
    }
    
    // Allow teachers to upload announcement files
    match /announcements/{classId}/{teacherId}/{uploadTime}/{fileName} {
      allow write: if request.auth != null 
        && request.auth.uid == teacherId;
    }
    
    // Allow users to upload profile pictures
    match /profiles/{userId}/{fileName} {
      allow write: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // Allow students/parents to upload assignment submissions
    // Updated to support the new submission structure: submissions/{assignmentId}/{userId}/{timestamp}_{filename}
    match /submissions/{assignmentId}/{userId}/{fileName} {
      allow write: if request.auth != null && (
        // User can upload their own submissions
        request.auth.uid == userId ||
        // Teachers can upload on behalf of students
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher' ||
        // Admins can upload anywhere
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Allow admins to upload anywhere
    match /{allPaths=**} {
      allow write: if request.auth != null 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}